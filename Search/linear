
def linear_search(nums, target):
    # Linear search algorithm
    # Time complexity: O(n)
    # Space complexity: O(1)

    for i in range(len(nums)):
        if nums[i] == target:
            return i  

    return -1

# Example usage:
nums = [1, 2, 3, 4, 5, 6]
target = 4
result = linear_search(nums, target)
print(f"Element {target} found at index: {result}")  

